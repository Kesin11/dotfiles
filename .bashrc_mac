#locale
export LANG='ja_JP.UTF-8'
export LC_ALL='ja_JP.UTF-8'

# git completion for git installed by homebrew
BREW_ROOT=`brew --prefix`
if [ -f $BREW_ROOT/etc/bash_completion ]; then
    source $BREW_ROOT/etc/bash_completion
    PS1="\u@\h:\W\$(__git_ps1)\$ "
    export PS1
fi

# bash-completion installed by homebrew
if [ -f $(brew --prefix)/etc/bash_completion ]; then
    . $(brew --prefix)/etc/bash_completion
  fi

#rbenv
export PATH=$HOME/.rbenv/bin:$PATH
eval "$(rbenv init -)"

#perlbrew
# source ~/perl5/perlbrew/etc/bashrc

#mysql
#$export PATH=/opt/local/lib/mysql55/bin/:$PATH

#virtualenvwrapper
# source /usr/local/bin/virtualenvwrapper.sh

#node npm
export PATH=$PATH:/usr/local/share/npm/bin/

export ENV=DEVEL

# 'hub' command alias to 'git'
eval "$(hub alias -s)"

# hub command completion
source /usr/local/etc/bash_completion.d/hub.bash_completion.sh
